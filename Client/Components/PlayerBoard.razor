@if (Board != null)
{
    <div class="container-fluid">
        <div class="row parks">
            <div class="col-5 col-md-3 ml-auto p-2">
                <Parks Points="Board.TopStreet.ParkPoints" />
            </div>
        </div>
        <div id="TopStreet" class="row street">
            <div class="col-2 text-center">
                <h4 class="font-weight-bold text-warning">Welcome To</h4>
                <input id="CityName" type="text" class="form-control" placeholder="Enter a name here..." />
            </div>
            @for (var i = 0; i < Board.TopStreet.Houses.Count; i++)
            {
                <HouseLocation IsFirst="i == 0" House="Board.TopStreet.Houses[i]" />
            }
        </div>
        <div class="row mt-2 bg-dark horizontal-road"></div>
        <div class="row parks">
            <div class="col-1">
                <div class="h-100 bg-dark vertical-road ml-auto mr-auto"></div>
            </div>
            <div class="col-5 col-md-3 ml-auto p-2">
                <Parks Points="Board.MiddleStreet.ParkPoints" />
            </div>
        </div>
        <div id="MiddleStreet" class="row street">
            <div class="col-1">
                <div class="h-100 bg-dark vertical-road ml-auto mr-auto"></div>
            </div>
            @for (var i = 0; i < Board.MiddleStreet.Houses.Count; i++)
            {
                <HouseLocation IsFirst="i == 0" House="Board.MiddleStreet.Houses[i]" />
            }
        </div>
        <div class="row" style="height: 0.5rem;">
            <div class="col-1">
                <div class="h-100 bg-dark vertical-road ml-auto mr-auto"></div>
            </div>
        </div>
        <div class="row bg-dark horizontal-road"></div>
        <div class="row parks">
            <div class="col-5 col-md-3 ml-auto p-2">
                <Parks Points="Board.BottomStreet.ParkPoints" />
            </div>
        </div>
        <div id="BottomStreet" class="row street">
            @for (var i = 0; i < Board.BottomStreet.Houses.Count; i++)
            {
                <HouseLocation IsFirst="i == 0" House="Board.BottomStreet.Houses[i]" />
            }
        </div>
        <div class="row mt-2 bg-dark horizontal-road"></div>
    </div>
}

@code{
    [Parameter]
    public Board Board { get; set; }
}